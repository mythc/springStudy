<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="byIndex" class="com.flh.sphello.HelloImpl3">
        <constructor-arg index="0" value="Hello iml3"></constructor-arg>
        <constructor-arg index="1" value="1"></constructor-arg>
    </bean>

    <bean id="byType" class="com.flh.sphello.HelloImpl3">
        <constructor-arg type="java.lang.String" value="Hello iml3"></constructor-arg>
        <constructor-arg type="int" value="2"></constructor-arg>
    </bean>

    <bean id="byName" class="com.flh.sphello.HelloImpl3">
        <constructor-arg name="a" value="Hello iml3"></constructor-arg>
        <constructor-arg name="b" value="3"></constructor-arg>
    </bean>
</beans>